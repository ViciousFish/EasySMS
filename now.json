{
  "version": 1,
  "type": "docker",
  "name":"easysms-app",
  "env": {
    "MONGO_URL":"@mongo-url",
    "API_URL": "https://easysms-app.now.sh/api",
    "AUTH0_DOMAIN": "@auth0-domain",
    "AUTH0_CLIENT_ID":"@auth0-client-id",
    "AUTH0_CLIENT_SECRET":"@auth0-client-secret",
    "AUTH0_CALLBACK_URL":"@auth0-callback-url"
  },
  "alias": "https://easysms-app.now.sh",
  "features": { "cloud": "v1" },
  "scale": {
    "sfo1": {
        "min": 1,
        "max": 1
    }
  }
}
